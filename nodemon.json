{

    "watch": ["client/src", "server"],
    "ext": "ts,tsx,js,jsx,json,css,scss",
    "ignore": [
        "node_modules",
        ".git",
        "dist",
        "build",
        "coverage",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],
    "exec": "tsx server/index.ts",
    "delay": "500",
    "env": {
        "NODE_ENV": "development"
    },
    "restartable": "rs",
    "colours": true,
    "stdin": false
}